<?xml version="1.0"?>
<data inherit_id="web.external_layout_standard" priority="50">>

<xpath expr="/t/div" position="replace">    
  <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
   

<head>
<style>
table, td {
  margin-left: 0px;
  padding-left: 10px;
  font-size: 8pt;
  color:rgb(102,102,102);
  font-family:Arial;
}

</style>
</head>                           
                           
 <table style="width:100%">
  
  <tr height="40px;">
    <td style="width:20%; border-left: 1px solid rgb(102,102,102);"></td>
    <td style="width:20%; border-left: 1px solid rgb(102,102,102);"></td>
    <td style="width:20%; border-left: 1px solid rgb(102,102,102);"></td>
    <td style="width:40%" rowspan="5"><img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"  style="height:70px; vertical-align:bottom; float:right"/></td>
  </tr>
 
  <tr>
    <td style="border-left: 1px solid rgb(102,102,102);"><span t-field="company.name"/></td>
    <td style="border-left: 1px solid rgb(102,102,102);"></td>
    <td style="border-left: 1px solid rgb(102,102,102);"></td>
  </tr>
  <tr>
    <td style="border-left: 1px solid rgb(102,102,102);"><span t-field="company.partner_id.street"/></td>
    <td style="border-left: 1px solid rgb(102,102,102);">Tel. 056 618 77 00</td>
    <td style="border-left: 1px solid rgb(102,102,102);">www.trimada.ch</td>
  </tr>
  <tr>
    <td style="border-left: 1px solid rgb(102,102,102);">CH-<span t-field="company.partner_id.zip"/> <span t-field="company.partner_id.city"/></td>
    <td style="border-left: 1px solid rgb(102,102,102);">Fax 056 618 77 07</td>
    <td style="border-left: 1px solid rgb(102,102,102);"><span t-field="company.partner_id.email"/></td>
  </tr>
  <tr height="30px">
    <td></td>
    <td></td>
    <td></td>
  </tr>
</table>


  </div>
</xpath>
</data>