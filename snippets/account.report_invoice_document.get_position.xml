<?xml version="1.0"?>
<data inherit_id="account.report_invoice_document" priority="50">
  
  <xpath expr="//table/thead/tr/th[1]" position="before">
    <t t-if="o.sale_order_id">
      <th>
        <span>Pos</span>
      </th>
    </t>
    <t t-if="o.is_sale_document">
      <th>
        <span>Pos</span>
      </th>
    </t>
  </xpath>
  <xpath expr="//table/tbody/t[3]/tr/t[1]/td[1]" position="before">
    <t t-if="o.sale_order_id">
      <td>
        <span t-esc="o.sale_order_id.get_position(line.product_id)"/>
      </td>
    </t>
    <t t-if="line.purchase_order_id">
      <td>
        <span t-esc="line.purchase_order_id.get_position(line.product_id)"/>
      </td>
    </t>
  </xpath>

</data>
