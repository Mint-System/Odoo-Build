    <xpath expr="//td[@name='account_invoice_line_name']" position="replace">
      <td name="td_name">
        <span class="o_bold" t-field="line.product_id.name"/><br/>
        <span t-field="line.name"/>  
      </td>
    </xpath>
    -->

  </xpath>

</data>