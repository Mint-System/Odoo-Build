<?xml version="1.0"?>
<data inherit_id="sale.report_saleorder_document" priority="50">

  <xpath expr="//t/t/t[3]" position="replace">
    <t t-set="information_block">
      <t t-if="doc.partner_shipping_id == doc.partner_invoice_id">
        <div style="font-size:10pt; line-height: 1.2; font-weight:bold">Invoicing and Shipping Address:</div>
        <div style="font-size:10pt; line-height: 1.2" t-field="doc.partner_shipping_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: False}"/>
      </t>
      <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">
        <div style="font-size:10pt; line-height: 1.2; font-weight:bold">Shipping Address:</div>
        <div style="font-size:10pt; line-height: 1.2" t-field="doc.partner_shipping_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: False}"/>
      </t>
    </t>
  </xpath>

</data>