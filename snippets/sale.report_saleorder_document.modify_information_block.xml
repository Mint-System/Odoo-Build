<?xml version="1.0"?>
<data inherit_id="sale.report_saleorder_document" priority="50">

  <xpath expr="//t[@t-set='information_block']/strong" position="replace">
  </xpath>

  <xpath expr="//t[@t-set='information_block']/div" position="replace">
  </xpath>

  <xpath expr="//t[@t-set='information_block']/t" position="replace">
    <t t-if="doc.partner_id != doc.partner_shipping_id">
      <span style="font-size: 10pt">
        <strong>Lieferadresse:</strong>
      </span>
      <div style="font-size: 10pt" t-field="doc.partner_shipping_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: False}"/>
    </t>
  </xpath>

</data>
