<t t-name="product.report_producttemplatelabel.trimada">
  <t t-call="web.basic_layout">
    <t t-foreach="docs" t-as="template">
      <t t-foreach="template.product_variant_ids" t-as="product">
        <style>
        .label {
            font-family: arial;
        }
        .box {
            margin: 0 0 2mm 0;
        }
        .padding {
            padding-bottom: 3mm;
        }
        .title {
            font-size: 11mm;
            margin: 3mm 3mm 0 3mm;
            font-weight: bold;
            text-align: center;
            border-bottom: solid 1px;
            line-height: 30mm;
        }
        .description {
            font-size: 9mm;
            margin: 0 3mm 0 3mm;
            text-align: center;
            border-bottom: solid 1px;
            height: 46mm;
            line-height: 20mm;
        }
        .delivery {
            font-size: 7mm;
            margin: 3mm 3mm 0 3mm;
            text-align: left;
            border-bottom: solid 1px;
            line-height: 1;
            height: 36mm;
        }
        .comment {
            font-size: 5mm;
            text-align: center;
            height: 8mm;
            line-height: 10mm;
        }
        .col-6 {
            padding-right: 0;
            padding-left: 0;
        }
        </style>
        <div class="page">
          <div class="label">
            <div class="row title">
              <div class="col-6">
                <span t-esc="product.default_code"/>
              </div>
              <div t-if="product.barcode" class="col-6 box text-right">
                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=0' % ('Code128', product.barcode, 250, 85)" alt="Barcode"/>
              </div>
            </div>
            <div class="description">
              <span t-esc="product.name"/>
              <br/>
              <span t-esc="product.type_description"/>
            </div>
            <div class="row delivery">
              <div class="col-12 box text-center">
                <div t-if="product.feeder_id">
                  <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=0' % ('Code128', product.feeder_id, 250, 80)" alt="Barcode"/>
                  <br/>
                </div>
                <div class="text-center">
                  <span class="text-center" t-esc="product.feeder_id"></span>
                </div>
              </div>
            </div>
            <div class="comment">
              <span>Trimada AG, CH-5610 Wohlen â€“ www.trimada.ch</span>
            </div>
          </div>
        </div>
      </t>
    </t>
  </t>
</t>