<?xml version="1.0"?>
<data inherit_id="account.report_invoice_document" priority="50">
  
  <xpath expr="//div[@id='informations']" position="replace">
    <style>
    table#info {
        width: 100%;
        margin-bottom: 25px;
        font-size: 9pt;
      }
        table#info tr {
        line-height: 1.2;
        text-align: left;
      }
        .note {
        font-size: 9pt;
      }
      </style>
    <table id='info'>
      <tr>
        <td width="17%">Rechnungsdatum</td>
        <td width="44%">
          <span t-field='o.invoice_date' t-options='{ "widget": "date" }'/>
        </td>
        <td width="14%"></td>
        <td width="25%"></td>
      </tr>
      <tr>
        <td>Kunden-Nr.</td>
        <td>
          <span t-field='o.partner_id.ref'/>
        </td>
        <td>U/Referenz</td>
        <td>
          <span t-field='o.user_id'/>
        </td>
      </tr>
      <tr>
        <td>I/Referenz</td>
        <td>
          
        </td>
        <td></td>
        <td>
        
        </td>
      </tr>
      <tr>
        <td>Betreff</td>
        <td>
         
        </td>
        <td></td>
        <td>
        
        </td>
      </tr>

    </table>
  </xpath>

</data>
