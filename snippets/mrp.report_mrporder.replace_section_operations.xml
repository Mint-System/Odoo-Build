<?xml version="1.0"?>
<data inherit_id="mrp.report_mrporder" priority="50">
  <xpath expr="//div[@t-if='o.workorder_ids']" position="replace">  
    <style>
    table#operations_header {
      width: 100%;
      margin-top:30px
    }
    table#operations_header th {
      font-weight: bold;
      font-size:14pt;
      padding-left: 10px;
    }
    table#operations_body {
      width: 100%;
      margin-top:10px
    }
    table#operations_body th {
      padding-left: 10px;
      padding-bottom: 5px;
      font-size:10pt;
    }
     table#operations_body td {
      padding-top: 5px;
      padding-bottom: 5px;
    }
    </style>
  	<table id='operations_header'>
    	<tr style="border-bottom: 1px solid rgb(220,220,220);">
			<th>
			<span t-if="o.state == 'done'">Abgeschlossene Operationen</span>
			<span t-else="">Operationen</span>
			</th>
   		</tr>
    </table>

  	<table id='operations_body'>
    	<tr style="border-bottom: 1px solid rgb(220,220,220)">
        	<th width="40%"><strong>Vorgang</strong></th>
        	<th width="30%;"><strong>Arbeitsplatz</strong></th>
        	<th width="15%; padding-right:10px; text-align:right"><strong>Minuten</strong></th>
        	<th width="5%"><strong>IST</strong></th>
        	<th width="10%"><strong>Visum</strong></th>   
   		</tr>
    	<tr style="border-bottom: 1px solid rgb(220,220,220)" t-foreach="o.workorder_ids" t-as="line2">
        	<td><span t-field="line2.name"/></td>
       		<td><span t-field="line2.workcenter_id.name"/></td>
        	<td style="padding-right:10px; text-align:right">
            	<span t-field="line2.duration_expected"/>
        	</td>
        	<td></td>
        	<td></td>
    	</tr>
  	</table>  
  
</xpath>
</data>