<?xml version="1.0"?>
<data inherit_id="purchase.report_purchasequotation_document">

    <xpath expr="//span[@t-field='o.name']/.." position="after">
        <div id="informations" class="row mt32 mb32">
            <div t-if="o.user_id" class="col-4 bm-2">
                <strong>Purchase Representative:</strong>
                <p t-field="o.user_id.email" class="m-0"/>
            </div>
            <div t-if="o.partner_ref" class="col-4 bm-2">
                <strong>Your Order Reference:</strong>
                <p t-field="o.partner_ref" class="m-0"/>
            </div>
            <div t-if="o.date_order" class="col-4 bm-2">
                <strong>Deadline quoation:</strong>
                <p t-field="o.date_order" class="m-0" t-options='{ "widget": "date" }'/>
            </div>
            <div t-if="o.incoterm_id" class="col-4 bm-2">
                <strong>Incoterm:</strong>
                <p t-field="o.incoterm_id.code" class="m-0"/>
            </div>
        </div>
    </xpath>

</data>
