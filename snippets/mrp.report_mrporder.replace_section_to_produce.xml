<?xml version="1.0"?>
<data inherit_id="mrp.report_mrporder" priority="50">

<xpath expr="//span[@t-field='o.product_id']/../.." position="after">
    
    <table style="width: 100%; margin-top: 20px; font-family: arial;">
       	<tr style="border-bottom: 1px solid rgb(220,220,220); font-size: 10pt">
          	<th style="width:40%; padding-left:10px"><strong>Menge</strong></th>
          	<th style="width:30%"><strong>Datum</strong></th>
          	<th style="width:30%"></th>
         
       	</tr>
      	<tr style="font-size: 10pt">
          	<td style="padding-left:10px">
            <strong><span t-field="o.product_qty"/>
            <span t-field="o.product_uom_id.name" groups="uom.group_uom"/></strong>
            </td>
        <td>Start: <span t-field="o.date_planned_start" t-options='{"widget": "date"}'/></td>
        <td style="text-align: right; padding-right: 10px"><strong>Termin: <span t-field="o.date_planned_start" t-options='{"widget": "date"}'/></strong></td>
       </tr>
    </table>
	
  </xpath>  
</data>
