<?xml version="1.0"?>
<data inherit_id="sale.report_blanketorder_document" priority="50">

    <xpath expr="//table[@class='table table-condensed table-borderless']/thead/tr/th[1]" position="before">
        <th>
            <span>Pos</span>
        </th>
    </xpath>

    <xpath expr="//table//t[@t-foreach='doc.line_ids']" position="before">
        <t t-set="index" t-value="1"/>
    </xpath>

    <xpath expr="//tbody[@class='sale_tbody']//span[@t-field='l.name']/.." position="before">
        <td>
            <span t-esc="index"/>
            <t t-set="index" t-value="index+1"/>
        </td>
    </xpath>

</data>
