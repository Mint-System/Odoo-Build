<?xml version="1.0"?>
<data inherit_id="sale.report_saleorder_document" priority="52">

  <xpath expr="//h2" position="after">

    <table style="width:100%; margin-bottom:25px; padding-left:0px; font-size:9pt; font-family:arial; color:black;">

      <tr style="line-height: 1.2">
        <td style="width:25mm;">Bestelldatum</td>
        <td style="width:85mm;">
          <span t-field='doc.date_order' t-options='{ "widget": "date" }'/>
        </td>
        <td style="width:25mm;"></td>
        <td style="width:45mm;"></td>
      </tr>

      <tr style="line-height: 1.2">
        <td>Kunden-Nr.</td>
        <td>
          <span t-field='doc.partner_id.ref'/>
        </td>
        <td>U/Referenz</td>
        <td>
          <span t-field='doc.user_id'/>
        </td>
      </tr>

      <tr style="line-height: 1.2">
        <td>I/Referenz</td>
        <td>
          <span t-field='doc.client_order_ref'/>
        </td>
        <td>Versandart</td>
        <td>
          <span t-field='doc.carrier_id'/>
        </td>
      </tr>

      <tr style="line-height: 1.2">
        <td>Betreff</td>
        <td>
          <span t-field='doc.comment'/>
        </td>
        <td>Lieferkondition</td>
        <td>
          <span t-field='doc.incoterm.code'/>
        </td>
      </tr>

    </table>

  </xpath>

</data>