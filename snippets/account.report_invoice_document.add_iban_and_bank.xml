<data inherit_id="account.report_invoice_document" priority="50">
    <xpath expr="//span[@id='payment_terms_note_id']/.." position="after">
        <div class="row">
            <div class="col">
                <span>IBAN: </span>
                <span t-field="o.partner_bank_id.acc_number"/>
            </div>
        </div> 
        <div class="row">
            <div class="col">
                <span>Bank/BIC: </span>
                <span t-field="o.partner_bank_id.display_name"/>
                <br/>
                <br/>
            </div>
        </div>
    </xpath>
</data>
