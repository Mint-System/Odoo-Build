<?xml version="1.0"?>
<data inherit_id="stock.report_picking" priority="50">

  <xpath expr="//table[1]/thead/tr/th[1]" position="before">
    <t t-if="o.sale_id">
      <th>
        <strong>Pos</strong>
      </th>
    </t>
    <t t-if="o.purchase_id">
      <th>
        <strong>Pos</strong>
      </th>
    </t>
  </xpath>
  <xpath expr="//table[1]/tbody/t/t/tr/td[1]" position="before">
    <t t-if="o.sale_id">
      <td>
        <span t-esc="o.sale_id.get_position(ml.product_id, ml.product_uom_qty)"/>
      </td>
    </t>
    <t t-if="o.purchase_id">
      <td>
        <span t-esc="o.purchase_id.get_position(ml.product_id, ml.product_uom_qty)"/>
      </td>
    </t>
  </xpath>

</data>
