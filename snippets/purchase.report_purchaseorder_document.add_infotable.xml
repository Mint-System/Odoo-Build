<?xml version="1.0"?>
<data inherit_id="purchase.report_purchaseorder_document" priority="50">
 
 <xpath expr="//div[@id='informations']" position="before">
  <style>
    table#info {
      width: 100%;
      margin-bottom: 25px;
      font-size: 9pt;
    }
      table#info tr {
      line-height: 1.2;
      text-align: left;
    }
  </style> 
  <table id='info'>
    <tr>
      <td width="17%">Bestelldatum</td>
      <td width="44%"><span t-field='o.create_date' t-options='{ "widget": "date" }'/></td>
      <td width="14%"></td>
      <td width="25%"></td>
    </tr>
   
    <tr>
      <td>Kunden-Nr.</td>
      <td><span t-field='o.partner_id.ref'/></td>
      <td>U/Referenz</td>
      <td><span t-field='o.user_id'/></td>
    </tr>
    <tr>
      <td>I/Referenz</td>
      <td><span t-field='o.partner_ref'/></td>
      <td>Versandart</td>
      <td><span/></td>
    </tr>
    <tr>
      <td>Betreff</td>
      <td><span/></td>
      <td>Lieferkondition</td>
      <td><span/></td>
    </tr>
  </table>
</xpath>

</data>