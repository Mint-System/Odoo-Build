<?xml version="1.0"?>
<data inherit_id="mrp.report_mrporder" priority="51">

<xpath expr="//span[@t-field='o.product_id']/../.." position="replace">
  
  <style>
    table#product_desription {
      width: 100%;
      margin-top: 10px;
      font-size: 10pt;
    }
    table#product_desription th, td {
      padding-left: 5px;
    }
  </style>
    
    <table id='product_desription'>
        <tr style="border-bottom: 1px solid rgb(220,220,220)">
            <th style="width: 15%"><strong>Produkt</strong></th>
            <th style="width: 25%"><strong><span t-field="o.product_id.default_code"/></strong></th>
            <th style="width: 60%"><strong>Typenbezeichnung</strong>
            </th>         
        </tr>
        <tr>
            <td colspan="2"><span t-field="o.product_id.name"/></td>
            <td><span t-field="o.product_id.type_description"/></td>
        </tr>     
    </table>
  </xpath>
  
</data>