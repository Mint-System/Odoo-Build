      Page: <span class="page"/> / <span class="topage"/>
    </div>
  </xpath>

  <xpath expr="//span[@t-field='company.company_details']" position="replace">
    <span t-if="company.company_details" style="font-size: 0.8rem;"
      t-field="company.company_details" />
