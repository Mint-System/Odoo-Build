<?xml version="1.0"?>
<data inherit_id="mrp.report_mrporder" priority="50">

<xpath expr="//table[@t-if='o.move_raw_ids']" position="replace">
  
  <table t-if="o.move_raw_ids" style="width: 100%; margin-top: 10px; font-family: arial;">
    <t t-set="has_product_barcode" t-value="any(m.product_id.barcode for m in o.move_raw_ids)"/>
    <thead>
        <tr style="border-bottom: 1px solid rgb(220,220,220); font-size: 10pt; vertical-align:middle;">
            <th style="width:10%; padding-left:10px">Art. Nr.</th>
            <th style="width:31%;">Bezeichnung</th>
            <th style="width:29%;">Typenbezeichnung</th>
            <th style="width:20%; text-align:right; padding-right:20px" t-attf-class="{{ 'text-right' if not has_product_barcode else '' }}">Menge</th>
            <th style="width:10%;" t-if="has_product_barcode" width="15%" class="text-center">Strichcode</th>
        </tr>
    </thead>
    <body>
        <t t-if="o.move_raw_ids">
            <tr style="border-bottom: 1px solid rgb(220,220,220); vertical-align: top; font-size: 10pt;" t-foreach="o.move_raw_ids" t-as="raw_line">
                <td style="padding-left:10px; padding-top:5px; vertical-align:top;"><span t-field="raw_line.product_id.default_code"/></td>
                <td style="padding-top:5px; vertical-align:top;">
                    <span t-field="raw_line.product_id.name"/>
                </td>
                <td style="padding-top:5px; vertical-align:top;">
                    <span t-field="raw_line.product_id.type_description"/>
                </td>
                <td style="text-align:right; padding-right:20px; padding-top:5px; vertical-align:top" t-attf-class="{{ 'text-right' if not has_product_barcode else '' }}">
                    <span t-field="raw_line.product_uom_qty"/>
                    <span t-field="raw_line.product_uom" groups="uom.group_uom"/>
                </td>
                <td style="padding-top: 5px; padding-bottom: 5px; vertical-align:middle;" t-if="has_product_barcode" width="15%" class="text-center">
                    <t t-if="raw_line.product_id.barcode">
                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=0' % ('Code128', raw_line.product_id.barcode, 600, 100)" style="width:100px;height:35px; float:right;" alt="Barcode"/>
                    </t>
                </td>
            </tr>
        </t>
    </body>
  </table>

  <table style="margin-top:30px; width:100%;">
     <tr style="border-bottom: 1px solid rgb(220,220,220);">
     <td style="font-size:14pt; font-weight: bold; padding-left:10px">Notiz
    </td>
    </tr>
  </table>

</xpath>
</data>
