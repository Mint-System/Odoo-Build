<?xml version='1.0' encoding='UTF-8'?>
<odoo>

  <record id="report_invoice_document" model="ir.ui.view">
    <field name="name" ref="{{ name }}.report_invoice_document"/>
    <field name="inherit_id" ref="account.report_invoice_document"/>
    <field name="priority">50</field>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="/t/t/div/h2" position="after">
          <t t-if="o.description">
            <div class="row">
              <div class="col">
                <br/>
                <span t-field="o.description"/>
                <br/>
                <br/>
              </div>
            </div>
          </t>
        </xpath>
        <xpath expr="/t/t/div/h2" position="attributes">
          <attribute name="style" separator=";" add="margin-top:15px"/>
        </xpath>
      </data>
    </field>
  </record>

</odoo>
