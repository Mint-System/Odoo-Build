#!/usr/bin/env bash
set -e

odoo_database=${1:-$ODOO_DATABASE}
odoo_database=${1:-$ODOO_DATABASE}

source set-addons-path

if [[ -n "$ADDONS_PATH" ]]; then
    log-entrypoint "Run click-odoo-update for: $ADDONS_PATH"
    (exec click-odoo-update --addons-path="$ADDONS_PATH" -d "$odoo_database" ) || true
fi
