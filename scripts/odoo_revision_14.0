#!/bin/bash

ODOO_REVISION=14.0

# Checkout odoo repo
cd odoo && git checkout 14.0
cd ..

# Checkout enterprise repo
cd enterprise && git checkout 14.0
cd ..

# Checkout theme repo
cd themes && git checkout 14.0
cd ..

# Pull docker image
DIGEST=odoo:14.0
if $ODOO_REVISION_DOCKER_PULL; then
    docker pull "$DIGEST"
fi
