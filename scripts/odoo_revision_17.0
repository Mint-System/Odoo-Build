#!/bin/bash

ODOO_REVISION=17.0

# Checkout odoo repo
cd odoo && git checkout 17.0
cd ..

# Checkout enterprise repo
cd enterprise && git checkout 17.0
cd ..

# Checkout theme repo
cd themes && git checkout 17.0
cd ..

# Pull docker image
DIGEST=odoo:17.0
if $ODOO_REVISION_DOCKER_PULL; then
    docker pull "$DIGEST"
fi
